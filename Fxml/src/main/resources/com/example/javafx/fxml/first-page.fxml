<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>

<!-- fx:controller: is to set your controller beside that this class to read your Controller package -->
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafx.fxml.controllers.FirstFxmlController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <!-- Components: this part to create your components here -->
  <Label fx:id="text"/>
  <Button text="Play now" onAction="#showMessage"/>

  <Label fx:id="count_lbl" text="Increment" alignment="CENTER"></Label>
  <Button mnemonicParsing="false" onAction="#onIncrement" text="Increment++" alignment="CENTER"></Button>

<!-- we'll install o scene builder kit to create new style different here -->
</VBox>
